<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>loginAdmin</servlet-name>
        <servlet-class>app.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutAdmin</servlet-name>
        <servlet-class>app.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewsAdmin</servlet-name>
        <servlet-class>app.servlets.AddNewsServlet</servlet-class>
    </servlet>




    <servlet-mapping>
        <servlet-name>loginAdmin</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutAdmin</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewsAdmin</servlet-name>
        <url-pattern>/admin/addNews</url-pattern>
    </servlet-mapping>

</web-app>